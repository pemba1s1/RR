@model RR.Models.CreateReview

@{
    ViewData["Title"] = "Edit Review";
}

<h1>Edit</h1>
<div class="d-flex justify-content-between">
    <h4>Restaurant Review</h4>
    <div class="d-flex gap-4">
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        <button onclick="goBack()" class="btn btn-outline-primary">Go Back</button>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group gap-3 d-flex flex-column">
                <label asp-for="RestaurantName" class="control-label">Restaurant Name</label>
                <input asp-for="RestaurantName" class="form-control" />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-group gap-3 d-flex flex-column">
                <label asp-for="FoodName" class="control-label">Food Name</label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group gap-3 d-flex flex-column">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group gap-3 d-flex flex-column">
                <label asp-for="ReviewScore" class="control-label">Review Score</label>
                <input asp-for="ReviewScore" class="form-control" />
                <span asp-validation-for="ReviewScore" class="text-danger"></span>
            </div>
            <div class="form-group gap-3 d-flex flex-column">
                <label asp-for="PublishingDate" class="control-label">Date</label>
                <input asp-for="PublishingDate" class="form-control" />
                <span asp-validation-for="PublishingDate" class="text-danger"></span>
            </div>
            <div class="form-group gap-2 d-flex flex-column">
                <label for="FoodPhoto" class="control-label"> Image </label>
                <br />
                <img src="@Url.Action("GetImage", new { id = Model.Id })" alt="Image" class="food-image" />
                <br />
                <input type="file" name="FoodPhoto" id="FoodPhoto" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary px-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
